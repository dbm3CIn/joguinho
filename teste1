}; //Mapa de inteiros onde está todo definido como grama e que pode ser customizado

int main(){
	mapa[32][17] = GOMBA; //Posição inicial do personagem
    int x, y; //Inteiros que serao utilizados para guardar a posição atual do personagem e alterá-la quando for conveniente
	register int linhas, colunas;
	volatile char movimento;
    volatile int auxiliar = NULL; //variável para fazer a troca de posição do personagem
	do{
		system("clear");
		for(linhas=0; linhas<32; linhas++){
			for(colunas=0; colunas<32; colunas++){
                if(mapa[linhas][colunas]==GOMBA){ //Caso encontre o personagem...
                    x = linhas;
                    y = colunas; //Guarda a posição atual para realizar as operações de movimentação
                }
				printf("%c ", mapa[linhas][colunas]);
				if(colunas==31) putchar('\n'); //Caso seja a última coluna coloca uma quebra de linha
			}
		}
		movimento = getchar(); //O movimento é definido pela entrada que o usuário digitar
		switch(movimento){
			case 'w': //Move o personagem uma posição acima
                (x==0)? break : continue; // Se x for 0, ele não permite que o personagem se mova e sai do laço
                (mapa[x-1][y])? break : continue; //Caso a posição acima for diferente de GRASS, ele sai do laço
                auxiliar = mapa[x][y];
                mapa[x][y] = mapa[x-1][y];
                mapa[x-1][y] = auxiliar;
                break;
			case 'a': //Move o personagem uma posição à esquerda
                (y==0)? break : continue ; //Se y for 0, ele não permite que o personagem se mova e sai do laço
                (mapa[x][y-1])? break : continue;//Caso a posição ao lado seja diferente de GRASS, ele sai do laço.
                auxiliar = mapa[x][y];
                mapa[x][y] = mapa[x][y-1];
                mapa[x][y-1] = auxiliar;
			case 's': //Move o personagem uma posição abaixo
                (x==32)? break : continue; //Se x for 32, ele não permite que o personagem se mova e sai do laço
                (mapa[x+1][y])? break : continue;//Caso a posição abaixo for diferente de GRASS, ele sai do laço.
                auxiliar = mapa[x][y];
                mapa[x][y] = mapa[x+1][y];
                mapa[x+1][y] = auxiliar;
			case 'd': //Move o personagem uma posição à direita
                (y==32)? break : continue; //Se y for 32, ele nῶao permite que o personagem se mova e sai do laço
                (mapa[x][y+1])? break : continue; //Caso a posição abaixo for
                auxiliar = mapa[x][y];
                mapa[x][y] = mapa[x][y+1];
                mapa[x][y+1] = auxiliar;
                break;
		}
	} while(movimento!=27); //O jogo continuará rodando até o usuário pressionar ESC
	puts("Obrigado por ter jogado nosso jogo! Pressione Enter para sair. "); //Printa a mensagem
	getchar(); //Só sai quando o usuário pressiona a tecla Enter
	return 0;
}
